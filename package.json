{
  "name": "bisquits",
  "version": "1.0.0",
  "description": "Word-building browser game prototype",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm dev:mp",
    "dev:lan": "pnpm dev:mp:lan",
    "dev:client": "vite --config client/vite.config.ts",
    "dev:client:lan": "vite --config client/vite.config.ts --host 0.0.0.0",
    "dev:server": "tsx watch server/index.ts",
    "dev:mp": "concurrently -n client,server -c yellow,cyan \"pnpm dev:client\" \"pnpm dev:server\"",
    "dev:mp:lan": "concurrently -n client,server -c yellow,cyan \"pnpm dev:client:lan\" \"pnpm dev:server\"",
    "build": "pnpm typecheck && vite build --config client/vite.config.ts",
    "preview": "vite preview --config client/vite.config.ts",
    "test": "tsx --test tests/**/*.test.ts",
    "typecheck": "pnpm typecheck:client && pnpm typecheck:server",
    "typecheck:client": "tsc --noEmit",
    "typecheck:server": "tsc --noEmit -p tsconfig.server.json",
    "server": "tsx server/index.ts",
    "deploy:cloudrun": "bash scripts/deploy-cloud-run.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.29.3",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@colyseus/auth": "0.16.6",
    "@colyseus/core": "0.16.24",
    "@colyseus/redis-driver": "0.16.1",
    "@colyseus/redis-presence": "0.16.4",
    "@colyseus/schema": "^3.0.76",
    "@colyseus/uwebsockets-transport": "0.16.10",
    "@colyseus/ws-transport": "^0.16.5",
    "colyseus": "^0.16.5",
    "colyseus.js": "^0.16.22"
  }
}
